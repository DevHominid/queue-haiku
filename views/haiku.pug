extends default

block content
  section.section-haiku-heading
    h1 #{title}
  section.section-haiku
    .container
      .row
        .col-sm-4
          if haiku.imageURL
            img.haiku-img(src=haiku.imageURL alt='haiku')
          else
            img.haiku-img(src='/images/qh-logo.png' alt='haiku')
        .col-sm-8e
          h2 By #{author}
          span Written on #{haiku.createdOn}
          if haiku.updatedOn
            span Updated on #{haiku.updatedOn}
      hr
      p= haiku.line1
      p= haiku.line2
      p= haiku.line3
      hr
      if user
        if user.id == haiku.author
          a.btn.btn-default(href='/haikus/edit/'+haiku._id) Edit
          a.btn.btn-danger.delete-haiku(href='#', data-id=haiku._id) Delete
