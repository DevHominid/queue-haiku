extends default

block content
  section.section-profile-heading
    if user
      if user.id === poet.id
        h1 My Haikus
      else
        h1 #{poet.username}'s Haikus
    else
      h1 #{poet.username}'s Haikus
  section.section-my-haikus-a
    .container
      h2.heading-a2-top Showing (#{haikus.length}) haikus.
      if haikus.length > 0
        ul.list-group
          each haiku, i in haikus
            li.list-group-item
              a(href='/haikus/'+haiku._id)= haiku.title
      else
        p.text-center Not one haiku has been found!
