extends default

block content
  section.section-edit-profile-heading
    .block-angled
    h1 #{user.first} #{user.last}
  section.section-edit-profile-a
    .container
      .row
        .col-sm-4
          .avatar-wrapper
            img#preview.avatar(src=user.imgUrl, alt='avatar')
            .avatar-aside
              .form-group
                label(for='avatar-input') Change avatar
                input#avatar-input.form-control-file(type='file', name='avatarInput', form='form-profile', accept='.jpg, .jpeg, .png')
              .preview
                p#status Please select a file
        .col-sm-8
          form#form-profile(method='POST', action='/users/profile/edit/'+user._id)
            input#avatar-url(type='hidden', name='avatarUrl', value=user.imgUrl)
            .form-group
              label(for='first') First
              input#first.form-control(type='text', name='first', value=user.first)
            .form-group
              label(for='last') Last
              input#last.form-control(type='text', name='last', value=user.last)
            .form-group
              label(for='bio') Bio
              textarea#bio.form-control(type='text', name='bio', rows='5', maxlength='300') #{user.bio}
            .form-group
              label(for='location') Location
              input#location.form-control(type='text', name='location', value=user.location)
      hr
      a.btn.btn-custom.margin-right-x(href='/users/profile/'+user._id) Back to profile
      input.btn.btn-custom-b(type='submit', value='Submit changes', form='form-profile')
          
          
