doctype html
html
  head
    meta(name="viewport", content="width=device-width")
    title Queue - Haiku
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/main.css')
    //- Google fonts
    link(href="https://fonts.googleapis.com/css?family=Noto+Serif:400,700", rel="stylesheet")
    //- Font awesome
    script(src='https://use.fontawesome.com/ca1dfe0972.js')
  body
    header
      nav.navbar.navbar-inverse
        .container
          .navbar-header
            .navbar-wrapper
              a.navbar-brand(href='/')
                img.logo(src='/images/qh-logo.png')
              button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a.nav-link(href='/') Home
              li
                a.nav-link(href='/haikus/add') Add Haiku 
            ul.nav.navbar-nav.navbar-right
              if user
                li 
                  a.nav-link(href='/users/profile') Profile
                li 
                  a.nav-link(href='/users/logout') Logout
              else 
                li
                  a.nav-link(href='/users/register') Register
                li
                  a.nav-link(href='/users/login') Login
    .message-block
      != messages('message', locals)
      if errors
        .message-wrapper
          .icon-wrapper
            i#icon-close.fa.fa-window-close.fa-2x(aria-hidden='true')
          each error, i in errors
            div(class='alert alert-danger') #{error.msg}
    block content
    footer
      .container
        p Copyright &copy; 2017
        a(href='http://devhominid.com', target='_blank')
          img.signature(src='/images/signature.png')
    script(src='/js/jquery-3.1.1.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/delete-haiku.js')
    script(src='/js/syllable.js')
    script(src='/js/messages.js')
    
